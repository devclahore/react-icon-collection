{
  "compilerOptions": {
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
    ],
  },
  "include": [
    "./images.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./.storybook",
    "./jest",
    "./src/__stories__",
    "./src/__tests__",
    "node_modules",
  ]
}
